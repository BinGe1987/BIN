<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <include layout="@layout/line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="备件名称:"
                android:textColor="@color/order_detail_value_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/facility_back_rect"
                android:padding="10dp"
                android:textColor="@color/order_detail_name_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="备件类型:"
                android:textColor="@color/order_detail_value_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_back"
                android:drawableRight="@mipmap/down_list_icon"
                android:padding="10dp"
                android:text="控制器"
                android:textColor="@color/order_detail_name_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="生产商家:"
                android:textColor="@color/order_detail_value_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/manufacturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/facility_back_rect"
                android:padding="10dp"
                android:textColor="@color/order_detail_name_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="型号:"
                    android:textColor="@color/order_detail_value_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:hint="请输入型号"
                    android:textColor="@color/order_detail_name_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量:"
                    android:textColor="@color/order_detail_value_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:inputType="number"
                    android:paddingTop="5dp"
                    android:hint="请输入数量"
                    android:textColor="@color/order_detail_name_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌:"
                    android:textColor="@color/order_detail_value_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:hint="请输入品牌(选填)"
                    android:textColor="@color/order_detail_name_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <include layout="@layout/line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="订货号:"
                android:textColor="@color/order_detail_value_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/ON"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/facility_back_rect"
                android:padding="10dp"
                android:textColor="@color/order_detail_name_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="序列号:"
                android:textColor="@color/order_detail_value_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/SN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/facility_back_rect"
                android:padding="10dp"
                android:textColor="@color/order_detail_name_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="设备图片："
                    android:textColor="@color/order_detail_value_color"
                    android:textSize="14sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/facility_back_rect"
                    android:padding="10dp"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/add_image"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/selector"
                            android:padding="10dp" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="备注："
                android:textColor="@color/order_detail_value_color"
                android:textSize="@dimen/order_detail_value_size"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/facility_back_rect"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone" >

                <EditText
                    android:id="@+id/remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffffff"
                    android:gravity="top"
                    android:hint="输入备注...."
                    android:minHeight="60dp"
                    android:padding="5dp"
                    android:textColor="@color/order_detail_name_color"
                    android:textColorHint="@color/order_detail_name_color"
                    android:textSize="@dimen/order_detail_input_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/add_device_sparepart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/selector2"
                android:text="完成"
                android:textColor="@color/main_click_text_color"
                android:textSize="19sp" />
            <include layout="@layout/line"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>