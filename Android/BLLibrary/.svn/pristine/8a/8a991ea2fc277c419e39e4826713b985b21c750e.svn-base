<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="账号密码登录"
            android:layout_marginBottom="20dp"
            android:textColor="@color/color_7"
            android:textSize="20sp" />
    </FrameLayout>

    <!--<include layout="@layout/line" />-->

    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edit"
            android:hint="@string/login_user"
            android:paddingBottom="15dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:textColor="@color/login_title_text_color"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/user"
            android:layout_alignTop="@id/user"
            android:layout_marginLeft="15dp"
            android:scaleType="center"
            android:src="@mipmap/icon_member" />
    </RelativeLayout>

    <include layout="@layout/line" />

    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edit"
            android:hint="@string/login_password"
            android:inputType="textPassword"
            android:paddingBottom="15dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:textColor="@color/login_title_text_color"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/pwd"
            android:layout_alignTop="@id/pwd"
            android:layout_marginLeft="15dp"
            android:scaleType="center"
            android:src="@mipmap/icon_password" />
    </RelativeLayout>

    <include layout="@layout/line" />

    <TextView
        android:id="@+id/errorInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="10sp"
        android:textColor="@android:color/holo_red_light"
        android:paddingBottom="3dp"/>

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/general_button_selector3"
        android:clickable="true"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/login_log"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


</LinearLayout>