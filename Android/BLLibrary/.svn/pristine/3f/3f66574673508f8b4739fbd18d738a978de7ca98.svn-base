<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <include layout="@layout/line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/device_info"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="设备名称:"
                    android:textColor="@color/order_detail_value_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/order_detail_name_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="生产商家:"
                    android:textColor="@color/order_detail_value_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/manufacturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/order_detail_name_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="型   号:"
                    android:textColor="@color/order_detail_value_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/order_detail_name_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="控制器品牌:"
                    android:textColor="@color/order_detail_value_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/controllerBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/order_detail_name_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="序 列 号:"
                    android:textColor="@color/order_detail_value_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/SN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/order_detail_name_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="设备图片："
                        android:textColor="@color/order_detail_value_color"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="添加"
                        android:layout_gravity="right"
                        android:textColor="@drawable/text_selector"
                        android:visibility="gone"
                        android:textSize="14sp" />
                </FrameLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/add_image"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/selector"
                            android:padding="10dp" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <include layout="@layout/line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="备注："
                android:textColor="@color/order_detail_value_color"
                android:textSize="@dimen/order_detail_value_size" />

            <EditText
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                android:gravity="top"
                android:hint="输入备注...."
                android:minHeight="60dp"
                android:padding="10dp"
                android:textColor="@color/order_detail_name_color"
                android:textColorHint="@color/order_detail_name_color"
                android:textSize="@dimen/order_detail_input_size" />

            <View android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/color_line"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/add_device_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_back"
                android:gravity="center"
                android:padding="10dp"
                android:text="添加电容配置信息"
                android:textColor="@color/main_click_text_color"
                android:textSize="19sp"
                android:visibility="gone" />

            <include layout="@layout/line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="已添加备件："
                android:textColor="@color/order_detail_value_color"
                android:textSize="@dimen/order_detail_value_size" 
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="vertical" >
            </LinearLayout>

            <include layout="@layout/line"/>
            
            <TextView
                android:id="@+id/add_device_sparepart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector2"
                android:gravity="center"
                android:padding="10dp"
                android:text="添加备件"
                android:textColor="@color/main_click_text_color"
                android:textSize="19sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>