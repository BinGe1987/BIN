package com.kwaijian.facility.BaseClasses.OS;

import android.graphics.Bitmap;
import android.graphics.Color;

/**
 * Created by BinGe on 2017/9/21.
 * 用于设置页面的主题
 */

public class HTTheme {

    /**
     * 通知栏的背景颜色
     */
    public int statusBarBackgroundColor = Color.WHITE;

    /**
     * 通知栏的字体颜色
     * 只支持两种
     */
    public StatusBarContentStyle statusBarContentStyle = StatusBarContentStyle.BLACK;

    /**
     * 标题栏背景颜色
     */
    public int titleBackgroundColor = Color.WHITE;

    /**
     * 标题栏背景图片
     */
    public Bitmap titleBackgroundImage;

    /**
     * 标题字体颜色
     */
    public int titleTextColor = Color.BLACK;

    /**
     * rootView的背景颜色
     */
    public int contentViewBackgroundColor = Color.WHITE;


    /**
     * 通知栏字体与icon的风格
     */
    public enum StatusBarContentStyle {
        Light,//亮色
        BLACK//深色
    }

}
